                <br>
                T: <a href="tel:<?= /* @noEscape */ $shippingTelephoneNumber ?>"><?= /* @noEscape */ $shippingTelephoneNumber ?></a>
                <?php endif; ?>
            </address>
        </div>
    </div>
<?php endif; ?>

<?php if (!empty($shippingMethod)) : ?>
    <div class="cs-last-order-details__box">
        <span class="cs-last-order-details__box-title"><?= /* @noEscape */ __('Shipping Method'); ?></span>
        <div class="cs-last-order-details__box-content"><?= /* @noEscape */ $shippingMethod ?></div>
